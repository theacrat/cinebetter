{
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/vite-react/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "./schemas/schema.graphql"
			}
		],
		"types": ["vite/client", "./worker-configuration.d.ts"]
	},
	"include": ["./src/**/*", "./*.ts"]
}
