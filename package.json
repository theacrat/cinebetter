{
	"name": "cinebetter",
	"description": "A better way to get IMDb metadata for Stremio",
	"scripts": {
		"dev": "vite --mode cf",
		"dev:bun": "vite",
		"deploy": "wrangler deploy",
		"prebuild": "bun codegen && bun prisma-generate",
		"prebuild:bun": "bun codegen && bun prisma-generate:bun",
		"build": "tsc -b && vite build --mode cf",
		"build:bun": "tsc -b && vite build",
		"check": "tsc && vite build && wrangler deploy --dry-run",
		"preview:bun": "bun run build && vite preview",
		"preview": "bun run build && vite preview --mode cf",
		"cf-typegen": "wrangler types",
		"codegen": "graphql-codegen --config codegen.ts",
		"codegen:watch": "graphql-codegen --config codegen.ts --watch",
		"prisma-generate": "D1=true prisma generate --generator cfClient",
		"prisma-generate:watch": "prisma-generate --watch",
		"prisma-generate:bun": "bun --bun prisma generate --generator bunClient",
		"prisma-generate:watch:bun": "prisma-generate:bun --watch",
		"db:create": "wrangler d1 migrations apply ImdbTmdb --local",
		"db:migrate": "D1=true prisma migrate diff --from-config-datasource --to-schema ./schemas/prisma/schema.prisma --script --output \"schemas/prisma/$(bun wrangler d1 migrations create ImdbTmdb migration | grep -oE 'cf-migrations/[0-9]{4}_.*\\.sql')\" && bun db:create",
		"db:deploy": "wrangler d1 migrations apply ImdbTmdb --remote",
		"db:create:bun": "bun db:migrate:bun",
		"db:migrate:bun": "bun --bun prisma migrate dev",
		"db:deploy:bun": "bun --bun prisma migrate deploy",
		"lint": "eslint",
		"format": "prettier --write --ignore-unknown",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": [
			"bun lint",
			"bun format"
		]
	},
	"dependencies": {
		"@adobe/react-spectrum": "^3.46.0",
		"@hono/vite-dev-server": "^0.23.0",
		"@prisma/adapter-d1": "^7.2.0",
		"@prisma/adapter-libsql": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@tanstack/react-router": "^1.143.11",
		"@types/stremio-addon-sdk": "^1.6.12",
		"@urql/core": "^6.0.1",
		"graphql": "^16.12.0",
		"hono": "4.11.1",
		"http-status-codes": "^2.3.0",
		"immer": "^11.1.0",
		"install": "^0.13.0",
		"lucide-react": "^0.562.0",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"stremio-types": "^0.51.1-5",
		"tmdb-ts": "^2.1.0",
		"unplugin-parcel-macros": "^0.1.1",
		"yn": "^5.1.0"
	},
	"devDependencies": {
		"@0no-co/graphqlsp": "^1.15.2",
		"@cloudflare/vite-plugin": "1.15.3",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "9.39.1",
		"@graphql-codegen/cli": "^6.1.0",
		"@parcel/watcher": "^2.5.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/bun": "^1.3.5",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"beamup-cli": "^1.3.2",
		"eslint": "9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-hooks": "7.0.0",
		"eslint-plugin-react-refresh": "0.4.24",
		"globals": "16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prisma": "^7.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "8.48.0",
		"vite": "^6.0.0",
		"wrangler": "^4.54.0"
	},
	"private": true,
	"type": "module"
}
