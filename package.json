{
	"name": "cinebetter",
	"type": "module",
	"private": true,
	"description": "A better way to get IMDb metadata for Stremio",
	"scripts": {
		"prebuild": "bun clean && bun predev",
		"build": "vite build",
		"prebuild:cf": "bun clean && bun predev:cf",
		"build:cf": "bun vite:cf build",
		"cf-typegen": "wrangler types",
		"check": "tsc && bun lint",
		"clean": "rimraf dist",
		"codegen": "graphql-codegen --config codegen.ts",
		"codegen:watch": "graphql-codegen --config codegen.ts --watch",
		"db": "bun env -- -- prisma",
		"db:cf": "bun env -v CF=true -- prisma",
		"db:create": "bun db:migrate",
		"db:create:cf": "wrangler d1 migrations apply ImdbTmdb --local",
		"db:deploy": "bun db migrate deploy",
		"db:deploy:cf": "wrangler d1 migrations apply ImdbTmdb --remote",
		"db:generate": "bun db generate --generator bunClient",
		"db:generate:cf": "bun db:cf generate --generator cfClient",
		"db:generate:watch": "bun prisma-generate --watch",
		"db:generate:watch:cf": "bun prisma-generate:cf --watch",
		"db:migrate": "bun db migrate dev",
		"db:migrate:cf": "bun db:cf migrate diff --from-config-datasource --to-schema ./schemas/prisma/schema.prisma --script --output \"schemas/prisma/$(bun wrangler d1 migrations create ImdbTmdb migration | grep -oE 'cf-migrations/[0-9]{4}_.*\\.sql')\" && bun db:create:cf",
		"db:studio": "bun db studio",
		"db:studio:cf": "bun db:cf studio",
		"predev": "bun codegen && bun db:generate",
		"dev": "vite dev",
		"predev:cf": "bun codegen && bun db:generate:cf",
		"dev:cf": "bun vite:cf dev",
		"env": "dotenv -e .env.development -e .env",
		"format": "bun lint",
		"lint": "eslint --fix",
		"prepare": "husky",
		"preview": "vite preview",
		"preview:cf": "bun vite:cf preview",
		"test": "vitest run",
		"vite:cf": "CF=true vite"
	},
	"dependencies": {
		"@adobe/react-spectrum": "^3.46.0",
		"@prisma/adapter-d1": "^7.3.0",
		"@prisma/adapter-libsql": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"@t3-oss/env-core": "^0.13.10",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"@urql/core": "^6.0.1",
		"@valkey/valkey-glide": "^2.2.6",
		"graphql": "^16.10.0",
		"immer": "^11.1.3",
		"lucide-react": "^0.561.0",
		"nitro": "npm:nitro-nightly@latest",
		"prisma": "^7.2.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"rxjs": "^7.8.2",
		"stremio-types": "^0.52.0",
		"tailwindcss": "^4.0.6",
		"tmdb-ts": "^2.2.0",
		"ts-extras": "^0.16.1",
		"vite-tsconfig-paths": "^6.0.2",
		"wrangler": "^4.61.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@0no-co/graphqlsp": "^1.15.2",
		"@antfu/eslint-config": "^7.2.0",
		"@cloudflare/vite-plugin": "^1.22.0",
		"@eslint-react/eslint-plugin": "^2.8.1",
		"@graphql-codegen/cli": "^6.1.1",
		"@parcel/watcher": "^2.5.6",
		"@tanstack/devtools-vite": "^0.3.11",
		"@tanstack/eslint-config": "^0.3.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@tsconfig/recommended": "^1.0.13",
		"@tsconfig/strictest": "^2.0.8",
		"@tsconfig/vite-react": "^7.0.2",
		"@types/node": "^22.10.2",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"dotenv-cli": "^10.0.0",
		"eslint-plugin-format": "^1.3.1",
		"eslint-plugin-package-json": "^0.88.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"jsdom": "^27.0.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.5.3",
		"rimraf": "^6.1.2",
		"tsx": "^4.21.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0"
	},
	"lint-staged": {
		"*": [
			"bun lint"
		]
	}
}
